      function deleteSpec(specId) {
        fetch('/admin/dashboard/Edit/delete/' + specId, {
            method: 'DELETE',
        })
        .then(response => response.json())
        .then(result => {
            console.log('Deleted:', result);
            window.location.href = result.redirectUrl; 
        })
        .catch(error => console.error('Error:', error));
    }
