          <!-- Sidebar -->
          <%- include('navbar/siteAdmin') %>

          <div class="col mt-3">
            <form action="/admin/scrape" method="POST">
                <div class="col mb-3">
                   <label for="url">กรอก URL ที่ต้องการทำการ Web Scraping:</label> 
